<div class="container">
    <table class="table table-striped">
      <tr>
        <th>Name</th>
        <th>Key</th>
        <th>Action</th>
      </tr>

      <% artifacts.each do |artifact| %>
        <tr>
          <td><%= link_to artifact.name,
                          artifact_path(artifact), class: 'text-decoration-none' %></td>
          <td><%= link_to "Open", artifact.key, target: '_blank' %></td>
          <td>
            <%= link_to "Delete",
                        artifact_path(artifact),
                        :method => :delete,
                        :data => { :confirm => "Are you sure?" },
                        :class => 'btn btn-danger' %>
          </td>
        </tr>
      <% end %>
    </table>

    <%= link_to 'New Artifact', new_artifact_path,
                :class => 'btn btn-success' %>
</div>