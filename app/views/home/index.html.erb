<div class="container">
  <% if current_user %>
    <h3 class="text-end">Organization: <%= @org.name %></h3>
    <%= render 'projects/list' %>
  <% else %>
    <div class="container mb-5">
      <div class="mt-4 p-5 text-white rounded jumbotron">
        <h1 class="display-4">Hello, world!</h1>
        <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra attention to
          featured content or information.</p>
        <hr class="my-4">
        <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
        <p class="lead">
          <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
        </p>
      </div>
    </div>

    <div class="row justify-content-md-center">
      <div class="col"></div>
      <div class="col-3">
        <div class="card">
          <div class="card-body">
            <h2>Free Plan</h2>
            <div class="price pull-right">
              Price: Free
            </div>
            <div class="features">
              <ul>
                <li>Unlimited file uploads</li>
                <li>Responsive design</li>
                <li>Access anywhere</li>
                <li>1 project</li>
              </ul>
            </div>
            <p>
              <%= link_to 'Sign Up', new_user_registration_path(plan: 'free'), class: 'btn btn-primary sign-up' %>
            </p>
          </div>
        </div>
      </div>

      <div class="col-3">
        <div class="card">
          <div class="card-body">
            <h2>Premium Plan</h2>
            <div class="price pull-right">
              Price: $10
            </div>
            <div class="features">
              <ul>
                <li>Unlimited file uploads</li>
                <li>Responsive design</li>
                <li>Access anywhere</li>
                <li class='extra'>Unlimited projects</li>
              </ul>
            </div>
            <p>
              <%= link_to 'Sign Up', new_user_registration_path(plan: 'premium'), class: 'btn btn-primary sign-up' %>
            </p>
          </div>
        </div>
      </div>
      <div class="col"></div>
    </div>
  <% end %>
</div>
